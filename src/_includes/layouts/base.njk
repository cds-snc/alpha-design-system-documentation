<!DOCTYPE html>
<html lang="{{ locale }}">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>{{ title }}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <script type="module">
            import { defineCustomElements } from "{{ '/components/loader/index.es2017.js' | url }}";
            defineCustomElements();
        </script>
        <link rel="stylesheet" href="{{ '/components/dist/gcds/gcds.css' | url }}">
        <link rel="stylesheet" href="{{ '/styles/prism.css' | url }}">

    </head>
    <body>
        <gcds-button
        type="link"
        task="skip-to-content"
        href="#content"
        >
        {{ base[locale].skipTo }}
        </gcds-button>

        {% include "partials/header.njk" %}

        {% if onThisPage %}
            {% include "partials/onthispage.njk" %}
        {% endif %}

        <main id="content">
            {{ content | safe }}
        </main>

        {% include "partials/footer.njk" %}
    </body>
</html>
