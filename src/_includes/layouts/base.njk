<!DOCTYPE html>
<html lang="{{ locale }}">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>{{ title }} - {{ base[locale].gcds }}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="robots" content="noindex">

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Noto+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

        <link rel="stylesheet" href="{{ '/components/dist/gcds/gcds.css' | url }}">
        <link rel="stylesheet" href="{{ '/styles/prism.css' | url }}">
        <link rel="stylesheet" href="{{ '/styles/style.css' | url }}">
        <script src="{{ '/scripts/code-showcase.js' | url }}"></script>
        <link rel="icon" type="image/png" sizes="96x96" href="{{ '/images/common/favicon-mobile.png' | url }}">

        <script type="module" src="/components/dist/gcds/gcds.esm.js"></script>
        <script nomodule src="/components/dist/gcds/gcds.js"></script>
    </head>
    <body>
        {% include "partials/header.njk" %}

        <div {% if onThisPage %}class="container sidebar-layout"{% else %}class="container general-layout"{% endif %}>
            {% if onThisPage %}
                {% include "partials/onthispage.njk" %}
            {% endif %}

            <main id="mc">
                {{ content | safe }}
            </main>

            {% if lastModified %}
                <dl class="date-modified">
                    <dt>{% if locale == "en" %}Date modified{% else %}Date de modification {% endif %}:</dt>
                    <dd>
                        <time>{{ page.date | dateLastModified}}</time>
                    </dd>
                </dl>
            {% endif %}
        </div>

        {% include "partials/footer.njk" %}

        {% if contactForm %}
            {% include "partials/contactform.njk" %}
        {% endif %}

        {% initClipboardJS %}
    </body>
</html>
