<!DOCTYPE html>
<html lang="{{ locale }}" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{{ title }} - {{ base[locale].gcds }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {# Font Awesome #}
    <link href="https://unpkg.com/font-awesome/css/font-awesome.min.css" rel="stylesheet">

    <link rel="stylesheet" href="{{ '/styles/prism.css' | url }}">
    <link rel="stylesheet" href="{{ '/styles/style.css' | url }}">
    <script src="{{ '/scripts/code-showcase.js' | url }}"></script>
    <link rel="icon" type="image/x-icon" sizes="96x96" href="{{ '/favicon.ico' | url }}">

    <!-- Utility framework -->
    <!-- TO DO: replace with package, once package is published -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/cds-snc/gcds-utilities/dist/utilities.css" />

    <!-- GC Design System  Components-->
    <link rel="stylesheet" href="{{ '/components/dist/gcds/gcds.css' | url }}">
    <script type="module" src="/components/dist/gcds/gcds.esm.js"></script>
    <script nomodule src="/components/dist/gcds/gcds.js"></script>

    <meta name="robots" content="noindex">
  </head>
  <body>
    {% include "partials/header.njk" %}

    <div class="content-wrapper">

      <main id="mc" class="container-xl mx-auto general-layout">
        {{ content | safe }}
      </main>

      <gcds-footer display="compact" lang="{{ locale }}"></gcds-footer>

      {% if contactForm %}
        {% include "partials/contactform.njk" %}
      {% endif %}
    </div>

    {% initClipboardJS %}
  </body>
</html>
