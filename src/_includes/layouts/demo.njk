      {# ------------- Pagination ------------- #}

      <h3 class="mt-700 mb-400 bb-sm">Pagination</h3>
      <gcds-pagination
        display="list"
        label="List pagination"
        type="list"
        total-pages="22"
        current-page="8"
        url={}
        pageChangeHandler={}
      ></gcds-pagination>

      <gcds-pagination
        display="simple"
        label="Simple Pagination"
        previous-href="#"
        previous-label="Previous"
        next-href="#"
        next-label="Next page"
      ></gcds-pagination>

      {# ------------- Phase banner ------------- #}

      <h3 class="mt-700 mb-400 bb-sm">Phase banner</h3>
      <gcds-phase-banner banner-role="primary">
        <gcds-icon name="tree" size="sm" slot="banner-icon-left"></gcds-icon>
        <p slot="banner-text">Exciting announcement.</p>
      </gcds-phase-banner>

      {# ------------- Date modified ------------- #}

      <h3 class="mt-700 mb-400 bb-sm">Date modified</h3>
      <gcds-date-modified>2023-01-26</gcds-date-modified>
    </section>

    {# ------------- Footer ------------- #}

    <gcds-footer
      display="full"
      contextual-heading="Additional content"
      contextual-links='{ "Components": "#","Tokens": "#", "Foundations": "#"}'
    >
    </gcds-footer>
  </body>
</html>
