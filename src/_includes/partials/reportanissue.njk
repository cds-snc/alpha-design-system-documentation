<section data-pagefind-ignore class="pt-100 mt-400 mb-600 {% if removeBorder %} {% else %}bt-sm b-dark {% endif %}">
  <h2 class="mt-300 mb-400">
    {{ reportanissue[locale].heading }}
  </h2>

  {% for paragraph in reportanissue[locale].paragraphs %}
    <p class="mb-400">{{ paragraph }}</p>
  {% endfor %}

  <gcds-button
    type="link"
    button-role="secondary"
    href="{{ links.githubCompsBug }}"
  >
    {{ reportanissue[locale].reportAnIssue }}
    <gcds-icon name="external-link">
  </gcds-button>
</section>
