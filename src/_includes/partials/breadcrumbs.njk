{% if eleventyNavigation %}
    {% set navPages = collections.all | getBreadcrumbs(eleventyNavigation.key) %}
    <nav slot="breadcrumb" aria-label="{{ breadcrumbs[locale].breadcrumb }}" class="breadcrumb container">
        <ol>
            <li>
                <a href={{ breadcrumbs[locale].url }}>Canada.ca</a>
            </li>
            {% for item in navPages %}
                {% set samePage = true if item.url == page.url else false %}
                {% if not samePage and item.url %} 
                    <li>
                        <a href="{{ item.url | url }}">{{ item.title }}</a>
                    </li>
                {% endif %}
            {% endfor %}
        </ol>
    </nav>
{% endif %}